@using core_web.Helpers
@inject IHtmlHelper Html

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <meta name="description" content="IP-Registry">
    <meta name="author" content="Łukasz Holeczek">
    <meta name="keyword" content="Blockchain, Patent">
    <title>CoreUI Free Bootstrap Admin Template</title>
    <link rel="apple-touch-icon" sizes="57x57" href="~/assetsV1/assets/favicon/apple-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="~/assetsV1/assets/favicon/apple-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="~/assetsV1/assets/favicon/apple-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="~/assetsV1/assets/favicon/apple-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="~/assetsV1/assets/favicon/apple-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="~/assetsV1/assets/favicon/apple-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="~/assetsV1/assets/favicon/apple-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="~/assetsV1/assets/favicon/apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="~/assetsV1/assets/favicon/apple-icon-180x180.png">
    <link rel="icon" type="image/png" sizes="192x192" href="~/assetsV1/assets/favicon/android-icon-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/assetsV1/assets/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="~/assetsV1/assets/favicon/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/assetsV1/assets/favicon/favicon-16x16.png">
    <link rel="manifest" href="~/assetsV1/assets/favicon/manifest.json">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="assets/favicon/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">
    <!-- Vendors styles-->
    <link rel="stylesheet" href="~/assetsV1/vendors/simplebar/css/simplebar.css">
    <link rel="stylesheet" href="~/assetsV1/css/vendors/simplebar.css">
    <!-- Main styles for this application-->
    <link href="~/assetsV1/css/style.css" rel="stylesheet">
    <!-- We use those styles to show code examples, you should remove them in your application.-->
    <link href="~/assetsV1/css/examples.css" rel="stylesheet">
    <script src="~/assetsV1/js/config.js"></script>
    <script src="~/assetsV1/js/color-modes.js"></script>
    <link href="~/assetsV1/vendors/coreui/chartjs/css/coreui-chartjs.css" rel="stylesheet">
    <style>
        .tooltip {
            position: absolute;
            background: #333;
            color: white;
            padding: 6px 12px;
            border-radius: 4px;
            font-size: 13px;
            pointer-events: none;
            opacity: 0;
            z-index: 9999; /* ⬅️ Make sure it's on top of all UI elements */
            transition: opacity 0.2s ease-in-out;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>

    <!-- sidebar -->
    @* @await Component.InvokeAsync("Sidebar") *@
    @Html.RenderAction("Sidebar", "MainLayoutComponent", new { area = "" })

    <!-- main -->
    <div class="wrapper d-flex flex-column min-vh-100">

        <!-- header -->
        @await Component.InvokeAsync("Header")
        @* @Html.RenderAction("Header", "MainLayoutComponent", new { area = "" }) *@
        
        <!-- render body -->
        <div class="body flex-grow-1">
            <div class="container-lg px-4">
                @RenderBody()
            </div>
        </div>

        <!-- footer -->
        @* @await Component.InvokeAsync("Footer") *@
        @Html.RenderAction("Footer", "MainLayoutComponent", new { area = "" })

    </div>

    <!-- CoreUI and necessary plugins-->
    <script src="~/assetsV1/vendors/coreui/coreui/js/coreui.bundle.min.js"></script>
    <script src="~/assetsV1/vendors/simplebar/js/simplebar.min.js"></script>
    <script>
        const header = document.querySelector('header.header');

        document.addEventListener('scroll', () => {
          if (header) {
            header.classList.toggle('shadow-sm', document.documentElement.scrollTop > 0);
          }
        });
    </script>
    <!-- Plugins and scripts required by this view-->
    <script src="~/assetsV1/vendors/chart.js/js/chart.umd.js"></script>
    <script src="~/assetsV1/vendors/coreui/chartjs/js/coreui-chartjs.js"></script>
    <script src="~/assetsV1/vendors/coreui/utils/js/index.js"></script>
    <script src="~/assetsV1/js/main.js"></script>
    <script src="https://d3js.org/d3.v7.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    @RenderSection("Scripts", required: false)
</body>
</html>