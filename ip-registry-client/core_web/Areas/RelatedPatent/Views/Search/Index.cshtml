@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["Title"] = "Semantic Patent Search";
}

@section Scripts {
    <script src="~/assetsV1/js/related-patent-search.js"></script>
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="mb-0">Semantic Patent Search</h5>
        </div>
        <div class="card-body">
            <form id="searchForm">
                <div class="mb-3">
                    <label for="queryInput" class="form-label">Enter your search query</label>
                    <input type="text" id="queryInput" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-primary">Search</button>
            </form>

            <div id="searchResults" class="mt-4 d-none">
                <h6>Search Results</h6>
                <div id="resultsContainer"></div>
            </div>

            <div id="searchError" class="alert alert-danger mt-3 d-none"></div>
        </div>
    </div>
</div>
