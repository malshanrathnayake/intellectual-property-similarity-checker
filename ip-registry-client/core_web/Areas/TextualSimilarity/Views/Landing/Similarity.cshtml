@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["Title"] = "Contextual Similarity Results";

    double topScore = ViewBag.TopScore ?? 0.0;
    string overallStatus = topScore < 0.6
        ? "Similarity score is below threshold. Registration may proceed."
        : "Similarity score exceeds threshold. Registration is not recommended.";
    string overallClass = topScore < 0.6 ? "bg-success" : "bg-danger";
}

<div class="container mt-4">
    <h4 class="mb-4">Contextual Similarity Results</h4>

    <!-- Overall Similarity Summary -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <h5 class="card-title">Overall Similarity</h5>
            <div class="progress mb-3" style="height: 25px;">
                <div class="progress-bar @overallClass"
                     role="progressbar"
                     style="width: @(topScore * 100)%">
                    @topScore.ToString("P2")
                </div>
            </div>
            <p class="mb-0 text-muted">
                Threshold: 60% <br />
                <strong>@overallStatus</strong>
            </p>
        </div>
    </div>

    <!-- Download Similarity Report -->
    @if (ViewBag.Results != null && ViewBag.Results.Count > 0)
    {
        <div class="text-end mb-4">
            <form asp-action="DownloadReport"
                  asp-controller="Landing"
                  asp-area="TextualSimilarity"
                  method="post">
                <input type="hidden" name="resultsJson" value='@Json.Serialize(ViewBag.Results)' />
                <input type="hidden" name="filename" value="@ViewBag.Title" />
                <button type="submit" class="btn btn-outline-primary rounded-pill px-4">
                    <i class="bi bi-download me-2"></i> Download Similarity Report
                </button>
            </form>
        </div>
    }

    @if (ViewBag.Results != null && ViewBag.Results.Count > 0)
    {
        <div class="row">
            @foreach (var result in ViewBag.Results)
            {
                var resultClass = result.Similarity < 0.6 ? "bg-success" : "bg-danger";
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@result.Title</h5>
                            <h6 class="card-subtitle text-muted mb-3">
                                @result.Author (@result.Year)
                            </h6>

                            <!-- Progress bar similarity -->
                            <div class="mb-3">
                                <label class="form-label">Similarity</label>
                                <div class="progress" style="height: 20px;">
                                    <div class="progress-bar @resultClass"
                                         role="progressbar"
                                         style="width: @(result.Similarity * 100)%">
                                        @result.Similarity.ToString("P2")
                                    </div>
                                </div>
                            </div>

                            <!-- Key metadata -->
                            <ul class="list-unstyled small mb-3">
                                <li><strong>Language:</strong> @result.Language</li>
                                <li><strong>Publisher:</strong> @result.Publisher</li>
                                <li><strong>Rights:</strong> @result.Rights</li>
                                <li><strong>Downloads:</strong> @result.Downloads</li>
                            </ul>

                            <!-- Expandable details (formal design) -->
                            <button class="btn btn-sm btn-outline-primary rounded-pill px-3 py-1"
                                    type="button"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#details-@result.BookId"
                                    aria-expanded="false"
                                    aria-controls="details-@result.BookId">
                                <i class="bi bi-info-circle me-1"></i> View Detailed Metadata
                            </button>

                            <div class="collapse mt-3" id="details-@result.BookId">
                                <div class="card border-0 shadow-sm bg-light-subtle rounded-3">
                                    <div class="card-body py-3 px-4">
                                        <h6 class="fw-bold mb-3 text-primary">
                                            <i class="bi bi-journal-text me-2"></i> Additional Information
                                        </h6>

                                        <div class="d-flex flex-wrap gap-2 mb-2 small">
                                            <div>
                                                <span class="fw-semibold text-light">Word Count:</span>
                                                <span class="text-secondary ms-1">@result.WordCount</span>
                                            </div>
                                            <div>
                                                <span class="fw-semibold text-light">Character Count:</span>
                                                <span class="text-secondary ms-1">@result.CharCount</span>
                                            </div>
                                        </div>

                                        <hr class="my-2 opacity-25" />

                                        <a href="@Url.Content("~/texts/" + result.TextPath)"
                                           target="_blank"
                                           class="btn btn-outline-success btn-sm rounded-pill mt-2">
                                            <i class="bi bi-book me-1"></i> Open Full Text
                                        </a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>

        @if (topScore < 0.6)
        {
            <div class="alert alert-success mt-3">
                Similarity score is within acceptable range. You may proceed to register this PDF.
            </div>

            <!-- Buttons side by side -->
            <div class="d-flex justify-content-between mt-4">
                <!-- Back Button on the left side -->
                <a asp-action="Index" asp-controller="Landing" asp-area="TextualSimilarity" class="btn btn-secondary btn-sm">
                    ← Back to Check Similarity
                </a>

                <!-- Register PDF Button on the right side -->
                <form asp-action="Register" asp-controller="Landing" asp-area="TextualSimilarity" method="post" class="d-inline">
                    <button type="submit" class="btn btn-primary">Register PDF</button>
                </form>
            </div>
        }
        else
        {

            <div class="mt-4">
                <a asp-action="Index" asp-controller="Landing" asp-area="TextualSimilarity" class="btn btn-secondary">
                    ← Back to Check Similarity
                </a>
            </div>
            <div class="alert alert-danger mt-3">
                Similarity score exceeds the 60% threshold. Registration is not recommended.
            </div>
        }


    }
    else
    {
        <div class="alert alert-warning">No similar works found in the dataset.</div>
    }

</div>
